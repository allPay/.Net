@using AllPay.EInvoice.Integration.Enumeration
@model AllPay.Einvoice.Integration.Sample.ViewModel.InvoiceDelayViewModel
@{
    ViewBag.Title = "歐付寶電子支付";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "InvoiceDelay", FormMethod.Post))
{
    <h2>發票延遲開立</h2>
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID, new { @Value = "2000132" })
                </td>
            </tr>
            <tr>
                <th>
                    延遲註記(必填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.DelayFlag,new SelectList(Enum.GetValues(typeof(DelayFlagEnum))))
                </td>
            </tr>
            <tr>
                <th>
                    商家自訂訂單編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.RelateNumber, new { @Value = "20151013163101"})
                </td>
            </tr>
            <tr>
                <th>
                    客戶代號(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerID, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    統一編號(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerIdentifier, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    客戶名稱(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerName, new { @Value = "翁健雄" })
                </td>
            </tr>
            <tr>
                <th>
                    客戶地址(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerAddr, new { @Value = "116臺北市文山區(木柵)辛亥路七段五巷四弄一號四樓", @class = "text-long" })
                </td>
            </tr>
            <tr>
                <th>
                    客戶手機號碼(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerPhone, new { @Value = "0960141549" })
                </td>
            </tr>
            <tr>
                <th>
                    客戶電子信箱(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CustomerEmail, new { @Value = "wjs6238@gmail.com" })
                </td>
            </tr>
            <tr>
                <th>
                    通關方式(選填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.ClearanceMark, new SelectList(Enum.GetValues(typeof(CustomsClearanceMarkEnum)),CustomsClearanceMarkEnum.None))
                </td>
            </tr>
            <tr>
                <th>
                    列印註記(選填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.Print, new SelectList(Enum.GetValues(typeof(PrintEnum)),PrintEnum.No))
                </td>
            </tr>
            <tr>
                <th>
                    捐贈註記(選填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.Donation, new SelectList(Enum.GetValues(typeof(DonationEnum)),DonationEnum.No))
                </td>
            </tr>
            <tr>
                <th>
                    愛心碼(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.LoveCode, new { @Value = "515", @class = "text-short" })
                </td>
            </tr>
            <tr>
                <th>
                    載具類別(選填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.CarruerType, new SelectList(Enum.GetValues(typeof(CarruerTypeEnum)),CarruerTypeEnum.None))
                </td>
            </tr>
            <tr>
                <th>
                    載具編號(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.CarruerNum, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    課稅類別(選填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.TaxType, new SelectList(Enum.GetValues(typeof(TaxTypeEnum)),TaxTypeEnum.Taxable))
                </td>
            </tr>
            <tr>
                <th>
                    發票金額(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.SalesAmount, new { @Value = "10" })
                </td>
            </tr>
            <tr>
                <th>
                    備註(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceRemark, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    商品名稱(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemName, new { @Value = "111111" })
                </td>
            </tr>
            <tr>
                <th>
                    商品數量(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemCount, new { @Value = "1" })
                </td>
            </tr>
            <tr>
                <th>
                    商品單位(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemWord, new { @Value = "個" })
                </td>
            </tr>
            <tr>
                <th>
                    商品價格(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemPrice, new { @Value = "10" })
                </td>
            </tr>
            <tr>
                <th>
                    商品課稅別(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemTaxType)
                </td>
            </tr>
            <tr>
                <th>
                    商品合計(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ItemAmount, new { @Value = "10" })
                </td>
            </tr>
            <tr>
                <th>
                    延遲天數(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.DelayDay, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    ECBank代號(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.ECBankID, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    交易單號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.Tsr, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    交易類別(必填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.PayType,new SelectList(Enum.GetValues(typeof(PayTypeEnum))))
                </td>
            </tr>
            <tr>
                <th>
                    通知廠商網址(選填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.NotifyURL, new { @Value = "" })
                </td>
            </tr>
            <tr>
                <th>
                    發票字軌類別(必填)：
                </th>
                <td>
                    @Html.DropDownListFor(m => m.InvType, new SelectList(Enum.GetValues(typeof(TheWordTypeEnum)),TheWordTypeEnum.Normal))
                </td>
            </tr>
        </table>
    </div>    
     <div class="buttonPanel">
         <button type="submit">
            送出</button>
        <button type="reset">
            重新填寫</button>
    </div>  
    <h2>顯示結果</h2>
    <span id="answer" class="div1">@ViewBag.message</span>
}
