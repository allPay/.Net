@model AllPay.Einvoice.Integration.Sample.ViewModel.QueryAllowanceViewModel
@{
    ViewBag.Title = "歐付寶電子支付";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Index", "QueryAllowance", FormMethod.Post))
{
    <h2>
        查詢折讓明細</h2>
    <div class="div1">
        <table class="table">
            <tr>
                <th>
                    廠商編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.MerchantID, new { @Value = "2000132" })
                </td>
            </tr>
            <tr>
                <th>
                    發票號碼(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.InvoiceNo, new { @Value = DateTime.Now.ToString("yyyyMMddHHmmdss") })
                </td>
            </tr>
            <tr>
                <th>
                    折讓編號(必填)：
                </th>
                <td>
                    @Html.TextBoxFor(m => m.AllowanceNo, new { @Value = DateTime.Now.ToString("yyyyMMddHHmmdss") })
                </td>
            </tr>
        </table>
    </div>
    <div class="buttonPanel">
        <button type="submit">
            送出</button>
        <button type="reset">
            重新填寫</button>
    </div>
    <h2>
        顯示結果</h2>
    <span id="answer" class="div1">@ViewBag.message</span>
}